generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model StreamingService {
  id       String   @id @default(uuid())
  name     String
  price    Float
  currency Currency @default(GBP)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  film Film[]
}

model Film {
  id                 String @id @default(uuid())
  streamingServiceId String
  name               String
  year               Int
  genre              Genre
  rating             Int
  runtime            Int // in minutes

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  streamingService StreamingService @relation(fields: [streamingServiceId], references: [id])

  @@unique([name, year])
}

model TVShow {
  id                 String @id @default(uuid())
  streamingServiceId String
  name               String
  genre              Genre
  rating             Int

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Seasons {
  id           String @id @default(uuid())
  tvShowId     String
  number       Int
  year         Int
  noOfEpisodes Int

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Currency {
  GBP
  USD
  EUR
  NGN
}

enum Genre {
  ACTION
  ADVENTURE
  COMEDY
  CRIME
  DRAMA
  FANTASY
  HISTORICAL
  HORROR
  MYSTERY
  PHILOSOPHICAL
  POLITICAL
  ROMANCE
  SAGA
  SATIRE
  SCIENCE_FICTION
  THRILLER
  URBAN
  WESTERN
}
